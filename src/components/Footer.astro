---
import { contactInformation } from "../content/contactInformation"
---
<hr class="my-5">
<footer>
    <div class="container mx-auto px-6">
      <div class="text-center">
          <!-- <div class="text-3xl font-bold mb-4">Estiven Mej√≠a</div>
          <p class="text-gray-400 mb-6">Ingeniero en Sistemas | Full Stack Developer</p>
            -->
          <div class="flex justify-center space-x-6 mb-8">
            <a href={contactInformation.linkedin}
              class="text-gray-400 hover:text-white transition-colors duration-300 text-3xl hover:scale-110 transform">
              <i class="fab fa-linkedin"></i>
            </a>
            <a href={contactInformation.github}
              class="text-gray-400 hover:text-white transition-colors duration-300 text-3xl hover:scale-110 transform">
              <i class="fab fa-github"></i>
            </a>
            <a href={`mailto:${contactInformation.email}`}
              class="text-gray-400 hover:text-white transition-colors duration-300 text-3xl hover:scale-110 transform">
              <i class="fas fa-envelope"></i>
            </a>
          </div>
      </div>
    </div>
</footer>
