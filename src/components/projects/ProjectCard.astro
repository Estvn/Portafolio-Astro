---
const { title, description, image, technologies, links, url } = Astro.props;
---

<div class="project-card hover-lift glass dark:glass-dark rounded-2xl overflow-hidden project-item" data-category="backend">
    <a href={`/projects/${url}`}>
        <div class="relative">
            <img src={image?.url || '/placeholder.svg?height=250&width=400'} alt={image?.alt} class="w-full h-48 object-cover" />

            <div class="flex space-x-2 mt-5 mx-4">
                {links.live && (
                <a href={links.live} class="bg-white/20 p-2 rounded-full hover:bg-white/30 transition-colors duration-300" target="_blank">
                    <i class="fas fa-external-link-alt"></i>
                </a>
                )}
                {links.github && (
                <a href={links.github[0].url} class="bg-white/20 p-2 rounded-full hover:bg-white/30 transition-colors duration-300" target="_blank">
                    <i class="fab fa-github"></i>
                </a>
                )}
            </div>

        </div>
    </a>

    <div class="p-6">
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
        <div class="flex flex-wrap gap-2">
            {technologies.map((tech:string[]) => (
            <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-3 py-1 rounded-full text-sm">
                {tech}  
            </span>
            ))}
        </div>
    </div>
</div>
