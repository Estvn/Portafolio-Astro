---
import { contactInformation } from "../content/contactInformation.ts";
const {bg_style} = Astro.props;
---

<section id="contacto" class={`section-spacing dark:bg-gray-${bg_style ?? "800"} rounded-2xl mb-10 px-4 sm:px-0`}>
    <div class="container mx-auto px-2 sm:px-6">
        <!-- Encabezado -->
        <div class="text-center mb-10 sm:mb-16">
            <h2 class="text-3xl xs:text-4xl md:text-5xl font-bold mb-3 xs:mb-4 text-gradient">Contacto</h2>
            <p class="text-lg xs:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto px-2">
                ¿Tienes un proyecto en mente? ¡Hablemos y hagámoslo realidad!
            </p>
        </div>
        
        <!-- Contenedor principal -->
        <div class="grid gap-8 sm:gap-12 max-w-6xl mx-auto">
            <!-- Tarjeta de información de contacto -->
            <div class="space-y-6">
                <div class="neomorphism dark:neomorphism-dark p-5 sm:p-8 rounded-2xl">
                    <h3 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6 text-primary-600 dark:text-primary-400">
                        Información de Contacto
                    </h3>
                    
                    <!-- Contenedor flexible para items de contacto -->
                    <div class="flex flex-col xs:flex-row flex-wrap gap-3 sm:gap-4 md:gap-6 mb-6 sm:mb-8">
                        <!-- Email -->
                        <div class="flex items-center space-x-3 sm:space-x-4 bg-white/50 dark:bg-gray-800/50 p-3 sm:p-4 rounded-xl shadow-sm w-full xs:min-w-[250px] xs:flex-1">
                            <div class="bg-primary-500 text-white p-2 sm:p-3 rounded-full text-sm sm:text-base">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-sm sm:text-base">Email</h4>
                                <a 
                                    href={`mailto:${contactInformation.email}`}
                                    target="_blank"
                                    class="text-gray-600 dark:text-gray-300 hover:text-primary-500 dark:hover:text-primary-400 text-xs sm:text-sm"
                                >
                                    {contactInformation.email}
                                </a>
                            </div>
                        </div>
                        
                        <!-- Teléfono -->
                        <div class="flex items-center space-x-3 sm:space-x-4 bg-white/50 dark:bg-gray-800/50 p-3 sm:p-4 rounded-xl shadow-sm w-full xs:min-w-[250px] xs:flex-1">
                            <div class="bg-primary-500 text-white p-2 sm:p-3 rounded-full text-sm sm:text-base">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-sm sm:text-base">Teléfono</h4>
                                <a 
                                    href={`https://wa.me/${contactInformation.phoneNumber}`} 
                                    target="_blank"
                                    class="text-gray-600 dark:text-gray-300 hover:text-primary-500 dark:hover:text-primary-400 text-xs sm:text-sm"
                                >
                                    {contactInformation.phoneNumber}
                                </a>
                            </div>
                        </div>
                        
                        <!-- Ubicación -->
                        <div class="flex items-center space-x-3 sm:space-x-4 bg-white/50 dark:bg-gray-800/50 p-3 sm:p-4 rounded-xl shadow-sm w-full xs:min-w-[250px] xs:flex-1">
                            <div class="bg-primary-500 text-white p-2 sm:p-3 rounded-full text-sm sm:text-base">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-sm sm:text-base">Ubicación</h4>
                                <p class="text-gray-600 dark:text-gray-300 text-xs sm:text-sm">Tegucigalpa D.C., Honduras</p>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Redes sociales -->
                    <div class="pt-6 sm:pt-8 border-t border-gray-200 dark:border-gray-600">
                        <h4 class="font-semibold mb-3 sm:mb-4 text-sm sm:text-base">Puedes buscarme en:</h4>
                        <div class="flex space-x-3 sm:space-x-4">
                            <a href={contactInformation.linkedin} class="bg-blue-600 text-white p-2 sm:p-3 rounded-full hover:bg-blue-700 transition-colors duration-300 hover:scale-110 transform text-sm sm:text-base">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a href={contactInformation.github} class="bg-gray-800 text-white p-2 sm:p-3 rounded-full hover:bg-gray-900 transition-colors duration-300 hover:scale-110 transform text-sm sm:text-base">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>