---
import { experienceInformation } from "../content/experienceInformation"
---

<section id="experiencia" class="section-spacing bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gradient">Experiencia y Educación</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
                Mi trayectoria profesional y formación académica
            </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
            <div class="relative">
                <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-primary-500"></div>
                
                {experienceInformation.map((item, index) => (
                    <div class="relative flex items-center mb-12">
                        {index % 2 === 0 ? (
                        <>
                            <div class="w-1/2 pr-8 text-right">
                            <div class="neomorphism dark:neomorphism-dark p-6 rounded-2xl hover-lift">
                                <h3 class="text-xl font-bold text-primary-600 dark:text-primary-400 mb-2">{item.title}</h3>
                                <h4 class="text-lg font-semibold mb-2">{item.company}</h4>
                                <p class="text-gray-600 dark:text-gray-300 mb-3">{item.date}</p>
                                <p class="text-gray-700 dark:text-gray-300">{item.description}</p>
                            </div>
                            </div>
                            <div class="w-1/2 pl-8 text-primary-500 text-4xl">
                            {item.certification ? (
                                <a href={item.certification} target="_blank" rel="noopener noreferrer" title="Ver certificado">
                                <i class="fas fa-certificate hover:text-primary-700 transition-colors duration-300"></i>
                                </a>
                            ) : (
                                <i class="fas fa-code"></i>
                            )}
                            </div>
                        </>
                        ) : (
                        <>
                            <div class="w-1/2 pr-8 text-right text-primary-500 text-4xl">
                            {item.certification ? (
                                <a href={item.certification} target="_blank" rel="noopener noreferrer" title="Ver certificado">
                                <i class="fas fa-certificate hover:text-primary-700 transition-colors duration-300"></i>
                                </a>
                            ) : (
                                <i class="fas fa-code"></i>
                            )}
                            </div>
                            <div class="w-1/2 pl-8">
                            <div class="neomorphism dark:neomorphism-dark p-6 rounded-2xl hover-lift">
                                <h3 class="text-xl font-bold text-primary-600 dark:text-primary-400 mb-2">{item.title}</h3>
                                <h4 class="text-lg font-semibold mb-2">{item.company}</h4>
                                <p class="text-gray-600 dark:text-gray-300 mb-3">{item.date}</p>
                                <p class="text-gray-700 dark:text-gray-300">{item.description}</p>
                            </div>
                            </div>
                        </>
                        )}
                    </div>
                ))}

             
            </div>
        </div>
    </div>
</section>
